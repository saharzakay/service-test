{
        //This option requires you to always put curly braces around blocks in loops and conditionals
        "curly": true,

        //This option prohibits the use of immediate function invocations without wrapping them in parentheses.
        "immed": true,

        //This option requires you to capitalize names of constructor functions.
        "newcap": true,

        //This option prohibits the use of arguments.caller and arguments.callee
        "noarg": true,

        //This option suppresses warnings about using [] notation when it can be expressed in dot notation
        "sub": true,

        //This option suppresses warnings about the use of assignments in cases where comparisons are expected
        "boss": true,

        //This option suppresses warnings about == null comparisons.
        "eqnull": true,

        //no use of ++ or --
        "plusplus": true,

        //Require triple equals i.e. `===`.
        "eqeqeq": true,

        //Require all non-global variables be declared before they are used.
        "undef": true,

        //This option warns when you define and never use your variables.
        "unused": false,

        //This option defines globals that are usually used for logging poor-man's debuggin
        "devel": true,

        //This option defines globals exposed by modern browser
        "browser": true,

        //Prohibit variable use before definition.
        "latedef": true,

        //Prohibit use of empty blocks.
        "noempty": true,

        //Tolerate use of eval
        "evil": false,

        //Allow functions to be defined within loops.
        "loopfunc": false,

        //Require `use strict` pragma in every file
        "strict": true,

        //Prohibit trailing whitespaces
        "trailing": true,

        "globals": {
                "angular": false,
                "jasmine": false,
                "expect": false,
                "it": false,
                "xit": false,
                "describe": false,
                "xdescribe": false,
                "fdescribe": false,
                "inject": false,
                "beforeAll": false,
                "beforeEach": false,
                "afterEach": false,
                "module": false,
                "browser": false,
                "element": false,
                "by": false,
                "require": false,
                "spyOn": false,
                "$": false,
                "_": false,
                "exports": false,
                "protractor": false
        }
}
